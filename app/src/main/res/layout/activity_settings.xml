<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_settings"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="open.hui.ren.githubclientdemo.personal.settings.SettingsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">
    </android.support.v7.widget.Toolbar>
    <android.support.v7.widget.CardView android:id="@+id/user_logout_card_view"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="@dimen/margin_smaller"
                                        android:clickable="true"
                                        android:foreground="@drawable/card_view_item_selector">
        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="@dimen/pane_height">
            <ImageView android:id="@+id/icon_exit_app"
                       android:layout_width="@dimen/img_size_24dp"
                       android:layout_height="@dimen/img_size_24dp"
                       android:layout_alignParentLeft="true"
                       android:layout_centerVertical="true"
                       android:layout_marginLeft="@dimen/margin_small"
                       android:src="@drawable/ic_exit_to_app_white_24dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="@dimen/margin_small"
                      android:layout_toRightOf="@id/icon_exit_app"
                      android:text="@string/event_text_exit_app"/>
            <ImageView android:layout_width="@dimen/img_size_24dp"
                       android:layout_height="@dimen/img_size_24dp"
                       android:layout_alignParentRight="true"
                       android:layout_centerVertical="true"
                       android:layout_marginRight="@dimen/margin_small"
                       android:src="@drawable/ic_keyboard_arrow_right_white_24dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
