<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView android:id="@+id/event_actor_avatar"
               android:layout_width="@dimen/img_size_24dp"
               android:layout_height="@dimen/img_size_24dp"/>
    <TextView android:id="@+id/event_actor_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/margin_smaller"/>
</LinearLayout>
